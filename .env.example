# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Anthropic Claude API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Bot Admin Configuration (optional)
# Comma-separated list of Discord user IDs who can use admin commands
# Leave empty to allow anyone to use admin commands (not recommended for production)
BOT_ADMIN_IDS=

# Channel Restrictions (optional)
# Comma-separated list of Discord channel IDs where bot is allowed to operate
# Leave empty to allow bot in all channels
ALLOWED_CHANNELS=

# Optional: Set log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
